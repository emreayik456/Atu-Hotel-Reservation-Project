@model AtuHotelRebuilt.Models.Reservation


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
    <link rel="stylesheet" href="~/Content/login.css">
</head>
<body>
    
    <div class="signup-container">
        <div class="signup-form">
            <div class="row">

                <h3>Are you sure you want to delete this?</h3>
                <!-- Sağ Kolon -->
                <div class="col-md-6 form-group">
                    <label for="checkin_date">Checkin Date</label>
                    <p>@Model.checkin_date.Day-@Model.checkin_date.Month-@Model.checkin_date.Year</p>
                </div>
                <div class="col-md-6 form-group">
                    <label for="checkout_date">Checkout Date</label>
                    <p>@Model.checkout_date.Day-@Model.checkout_date.Month-@Model.checkout_date.Year</p>
                </div>

                <!-- Tek Kolon (İki sütun boyunca yayılır) -->
                <div class="col-md-6 form-group">
                    <label for="Customer">Customer</label>
                    <p>@Model.Customer.fname @Model.Customer.lname</p>
                </div>
                <div class="col-md-6 form-group">
                    <label for="cost">Cost</label>
                    <p>@Model.cost</p>
                </div>
                <div class="col-md-6 form-group">
                    <label for="RoomID">Room Number</label>
                    <p>@Model.RoomID</p>
                </div>
                @if (Model.Room.RoomTypeID == 1)
                {
                    <div class="col-md-6 form-group">
                        <label for="RoomTypeID">Room Type</label>
                        <p>Economic</p>
                    </div>
                }
                @if (Model.Room.RoomTypeID == 2)
                {
                    <div class="col-md-6 form-group">
                        <label for="RoomTypeID">Room Type</label>
                        <p>Cummon</p>
                    </div>
                }
                @if (Model.Room.RoomTypeID == 3)
                {
                    <div class="col-md-6 form-group">
                        <label for="RoomTypeID">Room Type</label>
                        <p>Premium</p>
                    </div>
                }
                @if (Model.Room.RoomTypeID == 4)
                {
                    <div class="col-md-6 form-group">
                        <label for="RoomTypeID">Room Type</label>
                        <p>King Suit</p>
                    </div>
                }

            </div>
            <div class="form-group">
                <form action="/Reservation/Delete" method="post">
                    <input type="text" id="id" name="id" class="form-control" value="@Model.id" required style="display: none;" />
                    <input type="text" id="checkin_date" name="checkin_date" class="form-control" value="@Model.checkin_date" required style="display: none;" />
                    <button type="submit" class="btn btn-primary w-auto">Delete Reservation</button>
                </form>
            </div>

        </div>
        </div>
                
</body>
</html>
