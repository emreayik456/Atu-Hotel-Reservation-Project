<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create Reservation</title>
    <link rel="stylesheet" href="~/Content/login.css">
</head>
<body>
    <div class="signup-container">
        <div class="signup-form">
            <h2>New Reservation</h2>
            <form action="/Reservation/Create" method="post">
                @Html.AntiForgeryToken()

                <div class="row">
                    <!-- Check-in Date -->
                    <div class="col-md-6 form-group">
                        <label for="checkin_date">Checkin Date</label>
                        <input type="date" id="checkin_date" name="checkin_date" class="form-control" required>
                    </div>

                    <!-- Check-out Date -->
                    <div class="col-md-6 form-group">
                        <label for="checkout_date">Checkout Date</label>
                        <input type="date" id="checkout_date" name="checkout_date" class="form-control" required>
                    </div>

                    <!-- Room Type Selection -->
                    <div class="col-md-6 form-group">
                        <label for="RoomTypeID">Room Type</label><br />
                        <input type="radio" id="Economic" name="roomtype" value="Economic">
                        <label for="Economic">Economic</label>
                        <input type="radio" id="Cummon" name="roomtype" value="Cummon">
                        <label for="Cummon">Cummon</label><br />
                        <input type="radio" id="Premium" name="roomtype" value="Premium">
                        <label for="Premium">Premium</label>
                        <input type="radio" id="King Suit" name="roomtype" value="King Suit">
                        <label for="King Suit">King Suit</label>
                    </div>

                    <div class="col-md-6 form-group">
                        <label for="">Number of Guests</label><br />
                        <input type="radio" name="guestnum" value="0">
                        <label for="">0</label>
                        <input type="radio" name="guestnum" value="1">
                        <label for="">1</label><br />
                        <input type="radio" name="guestnum" value="2">
                        <label for="">2</label>
                        <input type="radio" name="guestnum" value="3">
                        <label for="">3</label>
                    </div>

                    <!-- Customer Selection -->
                    <div id="customerSelection" class="form-group">
                        <label for="CustomerTC">Customer</label>
                        <input type="text" id="CustomerTC" name="CustomerTC" class="form-control" placeholder="Enter Customer T.C." required value="@(Session["CustomerTC"] != null ? Session["CustomerTC"].ToString() : "")" }>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary w-auto">Create New Reservation</button>
                <a class="btn btn-primary w-auto text-white" href="/Customer/Create">Create New Customer</a>
            </form>

            <!-- Error Message -->
            @if (!string.IsNullOrEmpty(ViewBag.Error))
            {
                <div class="alert alert-danger mt-3">@ViewBag.Error</div>
            }
        </div>
    </div>

 
</body>
</html>
