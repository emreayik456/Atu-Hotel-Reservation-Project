@model AtuHotelRebuilt.Models.Staff

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete Staff</title>
    <link rel="stylesheet" href="~/Content/login.css">
</head>
<body>
    <div class="signup-container">
        <div class="signup-form">
            <div class="row">
                <h3>Are you sure you want to delete this Staff?</h3>


                <!-- First Name -->
                <div class="col-md-6 form-group">
                    <label for="fname">First Name</label>
                    <p>@Model.fname</p>
                </div>

                <!-- Last Name -->
                <div class="col-md-6 form-group">
                    <label for="lname">Last Name</label>
                    <p>@Model.lname</p>
                </div>

                <!-- Birth Date -->
                <div class="col-md-6 form-group">
                    <label for="birthdate">Birth Date</label>
                    <p>@Model.birthdate.ToString("dd.MM.yyyy")</p>
                </div>

                <!-- Phone -->
                <div class="col-md-6 form-group">
                    <label for="phone">Phone</label>
                    <p>@Model.phone</p>
                </div>

                <!-- Email -->
                <div class="col-md-6 form-group">
                    <label for="email">Email</label>
                    <p>@Model.email</p>
                </div>

                <!-- Department -->
                <div class="col-md-6 form-group">
                    <label for="department">Department</label>
                    <p>@Model.Department.dep_name</p>
                </div>

                <!-- Gender -->
                <div class="col-md-6 form-group">
                    @if (Model.gender == false)
                    {
                        <label>Gender</label><br>
                        <p>Male</p>
                    }
                    else
                    {
                        <label>Gender</label><br>
                        <p>Female</p>
                    }
                </div>
                <div class="form-group">
                    <form action="/Staff/Delete" method="post">
                        @Html.AntiForgeryToken()
                        <!-- Hidden Fields -->
                        <input type="hidden" id="tcNumber" name="tcNumber" value="@Model.tcNumber" />
                        <input type="hidden" id="fname" name="fname" value="@Model.fname" />

                        <!-- Submit Button -->
                        <button type="submit" class="btn btn-primary">Delete Staff</button>
                    </form>
                </div>
            </div>

                
            </div>
        </div>
</body>
</html>
