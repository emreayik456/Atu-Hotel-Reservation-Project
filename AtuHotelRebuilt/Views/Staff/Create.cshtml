@model AtuHotelRebuilt.Models.Staff

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create Staff</title>
    <link rel="stylesheet" href="~/Content/login.css">
</head>
<body>
    <div class="signup-container">
        <div class="signup-form">
            <h2>New Staff</h2>
            <form action="/Staff/Create" method="post">
                @Html.AntiForgeryToken()

                <div class="row">
                    <!-- First Name -->
                    <div class="col-md-6 form-group">
                        <label for="fname">First Name</label>
                        <input type="text" id="fname" name="fname" class="form-control" required>
                    </div>

                    <!-- Last Name -->
                    <div class="col-md-6 form-group">
                        <label for="lname">Last Name</label>
                        <input type="text" id="lname" name="lname" class="form-control" required>
                    </div>

                    <!-- Birth Date -->
                    <div class="col-md-6 form-group">
                        <label for="birthdate">Birth Date</label>
                        <input type="date" id="birthdate" name="birthdate" class="form-control" required>
                    </div>

                    <!-- Phone -->
                    <div class="col-md-6 form-group">
                        <label for="phone">Phone</label>
                        <input type="text" id="phone" name="phone" class="form-control" required>
                    </div>

                    <!-- T.C. Number -->
                    <div class="col-md-6 form-group">
                        <label for="tcNumber">T.C. Number</label>
                        <input type="text" id="tcNumber" name="tcNumber" class="form-control" required>
                    </div>

                    <!-- Email -->
                    <div class="col-md-6 form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" class="form-control" required>
                    </div>

                    <!-- Department -->
                    <div class="col-md-6 form-group">
                        <label for="departmentID">Department</label>
                        <select id="departmentID" name="departmentID" class="form-control" required>
                            <option value="">Select Department</option>
                            <option value="1">Kitchen</option>
                            <option value="2">Presentation</option>
                            <option value="3">Cleaning</option>
                            <option value="4">Reservation</option>
                            <option value="5">Managment</option>
                        </select>
                    </div>

                    <!-- Day Off -->
                    <div class="col-md-6 form-group">
                        <label for="dayoff">Day Off</label>
                        <select id="dayoff" name="dayoff" class="form-control" required>
                            <option value="">Select Day Off</option>
                            <option value="Monday">Monday</option>
                            <option value="Tuesday">Tuesday</option>
                            <option value="Wednesday">Wednesday</option>
                            <option value="Thursday">Thursday</option>
                            <option value="Friday">Friday</option>
                            <option value="Saturday">Saturday</option>
                            <option value="Sunday">Sunday</option>
                        </select>
                    </div>

                    <!-- Gender -->
                    <div class="form-group">
                        <label>Gender</label><br>
                        <input type="radio" id="male" name="gender" value="Male" required>
                        <label for="male">Male</label>
                        <input type="radio" id="female" name="gender" value="Female" required>
                        <label for="female">Female</label>
                    </div>

                    <!-- Address -->
                    <div class="col-md-12 form-group">
                        <label for="address">Address</label>
                        <input type="text" id="address" name="address" class="form-control">
                    </div>
                </div>

                <button type="submit" class="btn btn-primary w-100">Create New Staff</button>
            </form>

            @if (!string.IsNullOrEmpty(ViewBag.Error))
            {
                <div class="alert alert-danger mt-3">@ViewBag.Error</div>
            }
        </div>
    </div>

    <script src="~/Scripts/custom.js"></script>
</body>
</html>
