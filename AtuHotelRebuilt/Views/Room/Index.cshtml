    <script>
        document.getElementById("KingRoomsCheckbox").addEventListener("change", function () {
            var kingRoomsDiv = document.getElementById("KingRooms");
            var kingHeader = document.getElementById("KingHeader");
            if (this.checked) {
                kingRoomsDiv.style.display = "grid";
                kingHeader.style.display = "block";
            } else {
