@model AtuHotelRebuilt.Models.Customer


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <link rel="stylesheet" href="~/Content/login.css">
</head>
<body>
    <div class="signup-container">
        <div class="signup-form">
            <h2>New Customer</h2>
            <form action="/Customer/Create" method="post">
                @Html.AntiForgeryToken()

                <div class="row">


                    <!-- Sağ Kolon -->
                    <div class="col-md-6 form-group">
                        <label for="fname">First Name</label>
                        <input type="text" id="fname" name="fname" class="form-control" required>
                    </div>
                    <div class="col-md-6 form-group">
                        <label for="lname">Last Name</label>
                        <input type="text" id="lname" name="lname" class="form-control" required>
                    </div>

                    <!-- Tek Kolon (İki sütun boyunca yayılır) -->
                    <div class="col-md-6 form-group">
                        <label for="birthdate">Birth Date</label>
                        <input type="date" id="birthdate" name="birthdate" class="form-control" required>
                    </div>
                    <div class="col-md-6 form-group">
                        <label for="phone">Phone</label>
                        <input type="text" id="phone" name="phone" class="form-control" required>
                    </div>
                    <div class="col-md-6 form-group">
                        <label for="tcNumber">T.C. Number</label>
                        <input type="text" id="tcNumber" name="tcNumber" class="form-control" required>
                    </div>
                    <div class="col-md-6 form-group">
                        <label for="email">Email</label>
                        <input type="text" id="email" name="email" class="form-control" required>
                    </div>

                    <div class="form-group">
                        <label>Gender</label><br>
                        <input type="radio" id="male" name="gender" value="Male">
                        <label for="male">Male</label>
                        <input type="radio" id="female" name="gender" value="Female">
                        <label for="female">Female</label>
                    </div>
                </div>
                <div class="form-group" style="display: none;">
                    <input type="text" id="linkvalue" name="linkvalue" value="1">
                </div>
                <button type="button" id="createReservationButton" class="btn btn-primary w-auto">Create New Reservation</button>
                <button type="submit" id="createCustomerButton" class="btn btn-primary w-auto">Create New Customer</button>
            </form>

            @if (!string.IsNullOrEmpty(ViewBag.Error))
            {
                <div class="alert alert-danger mt-3">@ViewBag.Error</div>
            }
        </div>
    </div>


    <script src="~/Scripts/custom.js"></script>
    <script>
        // Create New Reservation Button
        document.getElementById("createReservationButton").addEventListener("click", function () {
            document.getElementById("linkvalue").value = "2"; // Set linkvalue to 2
            document.querySelector("form").submit(); // Submit the form
        });

        // Create New Customer Button
        document.getElementById("createCustomerButton").addEventListener("click", function () {
            document.getElementById("linkvalue").value = "1"; // Set linkvalue to 1
        });
    </script>
</body>
</html>
